# TikTok Configuration
TIKTOK_BASE_URL=https://library.tiktok.com
TIKTOK_API_VERSION=v1
TIKTOK_COUNTRY=TR

# Proxy Settings
USE_PROXIES=false
PROXY_ROTATION_INTERVAL=10
MAX_RETRIES=3

# Rate Limiting
REQUESTS_PER_MINUTE=30
DELAY_BETWEEN_REQUESTS=2

# Database
DB_TYPE=sqlite
DB_URL=sqlite:///data\ads.db

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs\scraper.log

# Banking Keywords (Turkish)
BANKING_KEYWORDS=["banka","bank","kredi","kart","finansal","finans","ödeme","para","yatırım","sigorta"]
# File Paths (Windows paths)
MEDIA_DOWNLOAD_PATH=data\media
RAW_DATA_PATH=data\raw
PROCESSED_DATA_PATH=data\processed

# User Agents
ROTATE_USER_AGENTS=true

# TikTok Specific
TIKTOK_SESSION_TIMEOUT=300
TIKTOK_MAX_ADS_PER_SEARCH=200